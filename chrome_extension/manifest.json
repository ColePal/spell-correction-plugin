{
  "name": "Spell Corrector",
  "description": "Spell Correction Extension Made Using the LMSpell Toolkit.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },
  "permissions": ["activeTab", "scripting", "storage", "cookies"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "icons": {
    "128": "icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["index.html","overlay.html","icon.png","suggestionPopup.html"],
      "matches": ["<all_urls>"]
    }],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["overlay.js","popup.js"]
    }
  ]
}